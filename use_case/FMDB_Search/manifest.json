{
    "manifest_version": 2,
    "name": "FM Database Search Tool",
    "version": "2.0.0",
    "description": "Find out the strengths and weaknesses of a football player using massive amounts of Football Manager (FM) data.",
    "icons": {
        "128": "small-logo.png",
        "48": "small-logo.png",
        "16": "small-logo.png"
    },
    "browser_action": {
        "default_popup": "search_main.html"
    },
    "background":{
        "scripts": ["eventPage.js"],
        "persistent": false
    },
    "permissions": [
        "storage",
        "tabs", 
        "contextMenus"
    ]
}