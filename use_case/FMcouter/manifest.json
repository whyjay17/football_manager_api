{
    "manifest_version": 2,
    "name": "FMcouter",
    "version": "1.0.5",
    "description": "Find out the strengths and weaknesses of a soccer player using massive amounts of Football Manager (FM) data.",
    "icons": {
        "128": "small-logo.png",
        "48": "small-logo.png",
        "16": "small-logo.png"
    },
    "background":{
        "scripts": ["eventPage.js"],
        "persistent": false
    },
    "permissions": [
        "storage",
        "tabs", 
        "contextMenus"
    ]
}